<h1>My Friends</h1>

<div class="search-area">
  <h3>Search People</h3>
  <%= form_tag search_people_path, remote: true, method: :get do %>
     <div class="form-group row">
        <div class="col-sm-9 no-right-padding">
          <%= text_field_tag :user, params[:user], placeholder: "Search by name or email", autofocus: true, class: "form-control form-control-lg"%>
        </div>
        <div class="col-sm-3 no-left-padding">
          <%= button_tag type: :submit, class: "btn btn-success" do %>
            <%= fa_icon 'search 2x' %>
          <% end %>
        </div>
     </div>
  <% end %>
</div>
<div id="search_result">

</div>
<% if !@friends.empty? %>
  <%= render 'users/friends_list' %>
<% end %>